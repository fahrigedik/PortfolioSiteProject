@{
    Layout = "_AdminLayout";
}
@model Portfolio.Entity.Entities.HeroSection

<div class="container mt-5">
    <h2>Create New Hero Section</h2>
    <form asp-action="Create" asp-controller="HeroSection" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Title1" class="form-label">Title 1</label>
            <input asp-for="Title1" class="form-control" />
            <span asp-validation-for="Title1" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Title2" class="form-label">Title 2</label>
            <input asp-for="Title2" class="form-control" />
            <span asp-validation-for="Title2" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Title3" class="form-label">Title 3</label>
            <input asp-for="Title3" class="form-control" />
            <span asp-validation-for="Title3" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="InformationDescription" class="form-label">Description</label>
            <textarea asp-for="InformationDescription" class="form-control" rows="3"></textarea>
            <span asp-validation-for="InformationDescription" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">Image URL</label>
            <input asp-for="ImageUrl" class="form-control" type="text" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SvgData" class="form-label">SVG Data</label>
            <textarea asp-for="SvgData" class="form-control" rows="3"></textarea>
            <span asp-validation-for="SvgData" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Upload Image</label>
            <input type="file" name="ImageFile" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsVisible" class="form-check-input" type="checkbox" />
            <label asp-for="IsVisible" class="form-check-label">Is Visible</label>
            <span asp-validation-for="IsVisible" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

