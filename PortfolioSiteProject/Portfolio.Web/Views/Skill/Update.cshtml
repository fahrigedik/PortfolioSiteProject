@{
    Layout = "_AdminLayout";
}
@model Portfolio.Entity.Entities.Skill

<div class="container mt-5">
    <h2>Update Skill</h2>
    <form asp-action="Update" asp-controller="Skill" method="post" enctype="multipart/form-data">
        <!-- Hidden ID -->
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="SkillName" class="form-label">Skill Name</label>
            <input asp-for="SkillName" class="form-control" />
            <span asp-validation-for="SkillName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">Image URL</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SvgData" class="form-label">SVG Data</label>
            <textarea asp-for="SvgData" class="form-control" rows="3"></textarea>
            <span asp-validation-for="SvgData" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Upload Image</label>
            <input type="file" name="ImageFile" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsVisible" class="form-check-input" type="checkbox" />
            <label asp-for="IsVisible" class="form-check-label">Is Visible</label>
            <span asp-validation-for="IsVisible" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
