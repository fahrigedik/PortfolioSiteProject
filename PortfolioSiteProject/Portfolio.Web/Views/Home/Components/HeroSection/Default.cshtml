@{
}
@model HeroSectionViewModel;

<div class="container py-5" data-aos="fade-up"
     data-aos-anchor-placement="top-center">
    <div class="row">
        <!-- Üst Kısım -->
        <div class="col-md-3 d-flex align-items-center justify-content-center mb-4">
            <img src="https://i.hizliresim.com/5oro5wc.jpeg" class="rounded-circle" alt="Profile" width="150">
        </div>
        <div class="col-md-9 d-flex align-items-center justify-content-start mb-4">
            <div class="text-white">
                <h1>@Html.Raw(@Model.HeroSection.Title1)</h1>
                <p class="lead">@Model.HeroSection.Title2</p>
                <p>@Model.HeroSection.Title3</p>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Sol Menü -->
        <div class="social-media-container col-md-3">
            <ul class="social-media-list">
                
                @foreach (var socialLink in @Model.SocialLinkDtos)
                {
                    <li class="sm-list-item">
                        @Html.Raw(socialLink.SvgData)
                        @socialLink.PreviewText
                    </li>
                }
            </ul>
        </div>

        <!-- Sağ Bilgi Kısmı -->
        <div class="col-md-9">
            <div class="information p-4 rounded-3">
                <h2>Information</h2>
                <p>
                   @Model.HeroSection.InformationDescription
                </p>
            </div>
        </div>
    </div>
</div>