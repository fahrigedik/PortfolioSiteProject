@{
}
@using Portfolio.Core.DTOs
@model List<ExperienceDto>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col">
            <h2 class="text-white text-center">Experiences</h2>
            <div class="experience-section row justify-content-center mt-4 gap-5 text-center">
                @foreach (var experience in Model)
                {
                    <div data-aos="fade-up" class="experience-card col-4">
                        <div class="experience-card-header">
                            <div class="logo">
                                <img style="object-fit:contain;" src="@experience.ImageUrl" alt="Logo" />
                            </div>
                            <div class="experience-card-header-information">
                                <h6>@experience.JobTitle</h6>
                                <h6>@experience.StartDate.ToString("dd.MM.yyyy") - @experience.EndDate.ToString("dd.MM.yyyy")</h6>
                                <h6>@experience.Company</h6>
                            </div>
                        </div>
                        <div class="experience-card-body">
                            <div class="experience-card-content">
                                @experience.JobDescription
                            </div>
                        </div>
                        <div class="glow"></div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>