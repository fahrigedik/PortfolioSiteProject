@{
    Layout = "_AdminLayout";
}
@model List<Portfolio.Entity.Entities.Project>

<a class="btn text-end btn-outline-info m-3" asp-action="Create" asp-controller="Project">Add Project</a>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Project Name</th>
            <th scope="col">Project Description</th>
            <th scope="col">Github Url</th>
            <th scope="col">Preview Url</th>
            <th scope="col">Image Url</th>
            <th scope="col">Is Visible</th>
            <th scope="col">Update</th>
            <th scope="col">Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <th scope="row"></th>
                <td>@project.ProjectName</td>
                <td>@project.ProjectDescription</td>
                <td>@project.GithubUrl</td>
                <td>@project.PreviewUrl</td>
                <td><img src="@project.ImageUrl" style="width:100px;" /></td>
                <td>@project.IsVisible</td>
                <td><a class="btn btn-warning" asp-action="Update" asp-controller="Project" asp-route-id="@project.Id">Update</a></td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Project" asp-route-id="@project.Id">Remove</a></td>
            </tr>
        }
    </tbody>
</table>


