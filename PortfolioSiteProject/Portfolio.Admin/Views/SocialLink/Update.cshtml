@{
    Layout = "_MainLayout";
}

@model Portfolio.Entity.Entities.SocialLink

<div class="container mt-5">
    <h2>Update Social Media</h2>
    <form asp-action="Update" asp-controller="SocialLink" method="post">
        <!-- Hidden ID -->
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="PreviewText" class="form-label">Preview Text</label>
            <input asp-for="PreviewText" class="form-control" />
            <span asp-validation-for="PreviewText" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SocialMediaLink" class="form-label">Social Media Link</label>
            <input asp-for="SocialMediaLink" class="form-control" />
            <span asp-validation-for="SocialMediaLink" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">Image URL</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SvgData" class="form-label">SVG Data</label>
            <textarea asp-for="SvgData" class="form-control" rows="3"></textarea>
            <span asp-validation-for="SvgData" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsVisible" class="form-check-input" type="checkbox" />
            <label asp-for="IsVisible" class="form-check-label">Is Visible</label>
            <span asp-validation-for="IsVisible" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
