@{
    Layout = "_MainLayout";
}
@using Portfolio.Entity.Entities
@model List<HeroSection>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title 1</th>
            <th scope="col">Title 2</th>
            <th scope="col">Title 3</th>
            <th scope="col">Information Description</th>
            <th scope="col">Is Visible</th>
            <th scope="col">İmage</th>
            <th scope="col">SVG</th>
            <th scope="col">Update</th>
            <th scope="col">Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var heroSection in Model)
        {
            <tr>
                <th scope="row"></th>
                <td>@heroSection.Title1</td>
                <td>@heroSection.Title2</td>
                <td>@heroSection.Title3</td>
                <td>@heroSection.InformationDescription</td>
                <td>@heroSection.IsVisible</td>
                <td><img src="@heroSection.ImageUrl" style="width:100px;" /></td>
                <td>@Html.Raw(@heroSection.SvgData)</td>
                <td><a class="btn btn-warning" asp-action="Update" asp-controller="HeroSection" asp-route-id="@heroSection.Id">Update</a></td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-controller="HeroSection" asp-route-id="@heroSection.Id">Remove</a></td>
            </tr>
        }   
    </tbody>
</table>
