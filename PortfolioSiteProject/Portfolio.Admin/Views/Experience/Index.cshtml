@{
    Layout = "_MainLayout";
}
@model List<Portfolio.Entity.Entities.Experience>

<a class="btn text-end btn-outline-info m-3" asp-action="Create" asp-controller="Experience">Add Experience</a>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Job Title</th>
            <th scope="col">Job Description</th>
            <th scope="col">Company</th>
            <th scope="col">Image</th>
            <th scope="col">Is Visible</th>
            <th scope="col">Start Date</th>
            <th scope="col">End / Current </th>
            <th scope="col">Update</th>
            <th scope="col">Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var experience in Model)
        {
            <tr>
                <th scope="row"></th>
                <td>@experience.JobTitle</td>
                <td>@experience.JobDescription</td>
                <td>@experience.Company</td>
                <td><img src="@experience.ImageUrl" style="width:100px;" /></td>
                <td>@experience.IsVisible</td>
                <td>@experience.StartDate</td>
                <td>@experience.EndDate</td>
                <td><a class="btn btn-warning" asp-action="Update" asp-controller="Experience" asp-route-id="@experience.Id">Update</a></td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Experience" asp-route-id="@experience.Id">Remove</a></td>
            </tr>
        }
    </tbody>
</table>

