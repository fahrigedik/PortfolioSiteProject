@{
    Layout = "_MainLayout";
}

@model List<Portfolio.Entity.Entities.UserInfo>

<a class="btn text-end btn-outline-info m-3" asp-action="Create" asp-controller="SocialLink">Add Project</a>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Number</th>
            <th scope="col">User Description</th>
            <th scope="col">Image Url</th>
            <th scope="col">Svg Data</th>
            <th scope="col">Is Visible</th>
            <th scope="col">Update</th>
            <th scope="col">Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userInfo in Model)
        {
            <tr>
                <th scope="row"></th>
                <td>@userInfo.Name</td>
                <td>@userInfo.Email</td>
                <td>@userInfo.Number</td>
                <td>@userInfo.UserDescription</td>
                <td><img src="@userInfo.ImageUrl" style="width:100px;" /></td>
                <td>@Html.Raw(userInfo.SvgData)</td>
                <td>@userInfo.IsVisible</td>
                <td><a class="btn btn-warning" asp-action="Update" asp-controller="UserInfo" asp-route-id="@userInfo.Id">Update</a></td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-controller="UserInfo" asp-route-id="@userInfo.Id">Remove</a></td>
            </tr>
        }
    </tbody>
</table>

